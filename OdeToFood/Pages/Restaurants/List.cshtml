@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}
<h1>Restaurants</h1>

    <div class="d-inline d-xl-inline-flex">
        <form method="get">
            <div class="form-group">
                <div class="input-group">
                    <input type="search" class="form-control" placeholder="Search" asp-for="SearchTerm" />
                </div>
            </div>
        </form>
    </div>
    <div class="d-inline d-inline-flex">
        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("Admin"))
            {
                <a class="btn btn-dark" asp-area="" asp-page="./Edit">Add Restaurant</a>
            }
        }
    </div>

<div class="container">
    <div class="card-deck">
        @foreach (var restaurant in Model.Restaurants)
        {
            <partial name="_Summary" model="restaurant" />
        }
    </div>
</div>